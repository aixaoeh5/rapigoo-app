# =================================
# RAPIGOO BACKEND - ENVIRONMENT VARIABLES
# =================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=5000

# =================================
# DATABASE CONFIGURATION
# =================================
# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/rapigoo

# For production with authentication:
# MONGO_URI=mongodb://rapigoo_app:app_password@mongo:27017/rapigoo?authSource=rapigoo

# MongoDB root credentials (for Docker setup)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme_strong_password

# Database application user credentials
MONGO_APP_USER=rapigoo_app
MONGO_APP_PASSWORD=app_password_change_in_production

# =================================
# JWT CONFIGURATION
# =================================
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# =================================
# EMAIL CONFIGURATION
# =================================
# Gmail SMTP configuration
# Set up Gmail App Password: https://support.google.com/accounts/answer/185833
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM="Rapigoo <noreply@rapigoo.com>"

# Email templates and branding
EMAIL_LOGO_URL=https://rapigoo.com/logo.png
EMAIL_COMPANY_NAME=Rapigoo
EMAIL_COMPANY_ADDRESS="123 Business St, City, Country"

# =================================
# FIREBASE CONFIGURATION
# =================================
# Firebase Admin SDK for push notifications
# Place your firebase-service-account.json file in the backend folder
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Firebase project configuration
FIREBASE_PROJECT_ID=your-firebase-project-id

# =================================
# REDIS CONFIGURATION
# =================================
# Redis for caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Session configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=3600000

# =================================
# PAYMENT GATEWAYS
# =================================
# Stripe configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal configuration (if needed)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# =================================
# EXTERNAL APIS
# =================================
# Google Maps API for geolocation services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Push notification keys
FCM_SERVER_KEY=your_fcm_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id

# SMS service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =================================
# FILE STORAGE
# =================================
# Local file storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 configuration (for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=rapigoo-uploads

# Cloudinary configuration (alternative)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# =================================
# SECURITY CONFIGURATION
# =================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# CORS configuration
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security headers
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_CROSS_ORIGIN_EMBEDDER_POLICY=true

# =================================
# LOGGING AND MONITORING
# =================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Sentry for error tracking (production)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# =================================
# BUSINESS CONFIGURATION
# =================================
# Application settings
APP_NAME=Rapigoo
APP_VERSION=1.0.0
APP_URL=https://rapigoo.com

# Business rules
MIN_ORDER_AMOUNT=5.00
MAX_ORDER_AMOUNT=500.00
DELIVERY_RADIUS_KM=20
DEFAULT_DELIVERY_FEE=2.50

# Commission rates (percentage)
PLATFORM_COMMISSION_RATE=0.15
PAYMENT_PROCESSING_FEE=0.029

# =================================
# DEVELOPMENT TOOLS
# =================================
# Enable development features
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
SEED_DATABASE=false

# Testing configuration
TEST_DATABASE_URL=mongodb://localhost:27017/rapigoo-test
TEST_EMAIL_USER=test@example.com