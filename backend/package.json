{
  "name": "rapigoo-backend",
  "version": "1.0.0",
  "description": "Backend API for Rapigoo delivery platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run lint && npm run test:ci",
    "docker:build": "docker build -t rapigoo-api .",
    "docker:run": "docker run -p 5000:5000 rapigoo-api",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "api",
    "delivery",
    "marketplace",
    "mobile"
  ],
  "author": "Rapigoo Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.11.2",
    "firebase-admin": "^11.8.0",
    "helmet": "^6.2.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.8.7",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "redis": "^4.6.5",
    "socket.io": "^4.6.1",
    "stripe": "^12.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
