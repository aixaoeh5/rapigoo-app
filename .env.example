# Configuración de API para desarrollo
# Copia este archivo a .env.local y personaliza según tu entorno

# IP del servidor de desarrollo (opcional - se detecta automáticamente)
# EXPO_PUBLIC_API_HOST=192.168.1.100

# Puerto del backend (opcional - por defecto 5000)
# EXPO_PUBLIC_API_PORT=5000

# URL completa personalizada (opcional - sobrescribe detección automática)
# EXPO_PUBLIC_API_URL=http://tu-ip:5000/api

# Configuraciones por entorno
# Para emulador Android: EXPO_PUBLIC_API_HOST=10.0.2.2
# Para simulador iOS: EXPO_PUBLIC_API_HOST=localhost
# Para dispositivo físico: detecta automáticamente o especifica tu IP local

# Timeout de conexión en milisegundos
EXPO_PUBLIC_API_TIMEOUT=15000

# Habilitar logs de red (desarrollo)
EXPO_PUBLIC_DEBUG_NETWORK=true